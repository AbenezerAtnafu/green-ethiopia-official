<%- include('header') -%>
<%- include('nav') -%>

    <div class="greennature-page-title-wrapper header-style-5-title-wrapper">
        <div class="greennature-page-title-overlay"></div>
        <div class="greennature-page-title-container container">
            <h1 class="greennature-page-title">Campaigns</h1>
            <span class="greennature-page-caption">Green Ethiopia</span>
        </div>
    </div>
    <!-- is search -->

    <div class="m-5">

        
        <% if(campaigns.length>0) {%>
            <% campaigns.forEach(function(campaign) { %>

                <div class="row ml-3 mr-3 mt-5 mb-5">
                    <div class="col-sm-5 col-md-5 col-lg-5 block2-pic hov-img0">
                        <div class="greennature-blog-thumbnail greennature-gallery">
                            <div class="flexslider" data-pausetime="7000" data-slidespeed="600" data-effect="fade">
                                <ul class="slides">
                                    <% campaign.images.forEach((image) => { %>
                                        <li>
                                            <a class="hov-img0 how-pos5-parent rs1 " href="/campaigns/<%= campaign.id %>" data-fancybox-group="greennature-gal-1" data-rel="fancybox">
                                                <img class=" img-fluid" src="/images/campaigns/<%- image.url %>" alt=""/>
                                                <div class=" flex-col-c-m size-140 pt-2 pb-2 pl-3 pr-3 rounded bg-secondary how-pos5 time-container">
                                                    <span class="stext-109 txt-center ">
                                                        <div class=" bold text-light font-weight-bold text-lg">
                                                            <div class="greennature-blog-day"><%= new Date(campaign.end_date).getFullYear(); %></div>
                                                            <div class="greennature-blog-month text-uppercase"><%= months[new Date(campaign.end_date).getMonth()] %></div>
                                                            
                                                            <div class="eventlist-datetag-status date-eraser" date="<%- campaign.end_date %>"></div>
                                                        </div>
                                                    </span>
                                                </div>
                                            </a>
                                        </li>
                                    <% }); %>
                                    
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-7 col-lg-7 col-sm-7">

                        <div class="blog-content-wrapper">
                            <header class="post-header">
                                <h3 class="greennature-blog-title text-capitalize"><a href="/campaigns/<%= campaign.id %>"><%= campaign.title %></a></h3>

                                <div class="greennature-blog-info text-capitalize">
                                    <div class="blog-info blog-category greennature-skin-info"><i class="fa fa-sign-in" aria-hidden="true"></i> <a href="<%= campaign.join_us_url%>" rel="tag"> Click here to Join Campaign</a></div>
                                    <div class="blog-info blog-category greennature-skin-info"><i class="fa fa-map-marker" aria-hidden="true"></i><a href="#" rel="tag">Where </a><span class="sep">: </span> Addis Ababa</div>
                                    
                                
                                    <div class="clear"></div>
                                </div>
                                <div class="clear"></div>
                            </header>
                            <!-- entry-header -->

                            <div class="greennature-blog-content "><%= campaign.description.substring(0,300) %>
                                <div class="clear"></div><a href="/campaigns/<%= campaign.id %>" class="excerpt-read-more">Read More</a></div>
                        </div>

                    </div>
                </div>

            <!-- content wrapper -->
        <% }); %>

    </div>

    



    <%} else{  %>
        <h1 class="">No Campaigns Found!</h1>
    <% } %> 

    <div class="greennature-pagination" style="padding-right:150px">
        <% if(page>1){ %>
			<a href="/campaigns?page=<%- page - 1 %>&q=<%- query %>"
				class="prev page-numbers">
				Prev
			</a>
		<% }; %>
		<% if(campaigns.length===10){ %>
            <a class="next page-numbers" href="/campaigns?page=<%- page+1 %>">Next &rsaquo;</a>
		<% }; %>
        
    </div>

<%- include('footer') -%>